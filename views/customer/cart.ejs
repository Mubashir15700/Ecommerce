<!DOCTYPE html>
<html lang="en">

<%- include('../partials/customer/head') -%>

    <body>

        <div class="site-wrap">
            <%- include('../partials/customer/header') -%>
                <div class="bg-light py-3">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12 mb-0"><a href="/">Home</a> <span class="mx-2 mb-0">/</span> <strong
                                    class="text-black">Cart</strong></div>
                        </div>
                    </div>
                </div>

                <div class="container">
                    <div class="site-section">
                        <% if (!cartProducts.length) { %>
                            Your cart is empty.
                            <% } else { %>
                                <div class="row">
                                    <form class="col-md-12" action="" method="">
                                        <div class="site-blocks-table">
                                            <div class="container">
                                                <% cartProducts.forEach((cartItem)=> { %>
                                                    <div class="col-lg-12 p-4 border mb-3 d-flex">
                                                        <div class="col-md-4">
                                                            <a href="/single/<%= cartItem.product._id %>">
                                                                <img src="<%= cartItem.product.images[0] %>" alt="Image"
                                                                    height="180px" width="180px" class="img-fluid">
                                                            </a>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <span class="d-block text-primary h6 text-uppercase">
                                                                <%= cartItem.product.name %>
                                                            </span>
                                                            <p>
                                                                <%= cartItem.product.description %><br>
                                                                    Category: <%= cartItem.product.category.name %><br>
                                                                        <strong class="text-black">₹<%=
                                                                                cartItem.product.price.toFixed(2) %></strong>
                                                            </p>
                                                            <p>Stock: <%= cartItem.product.stock %>
                                                            </p>
                                                            <p class="text-danger" id="stock_<%= cartItem._id %>"
                                                                style="display: none;">
                                                                Insufficient stock
                                                            </p>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <span class="text-black">
                                                                Total Price: ₹<span id="totalPrice_<%= cartItem._id %>"
                                                                    class="text-black">
                                                                    <%= (cartItem.product.price * cartItem.quantity).toFixed(2) %>
                                                                </span>
                                                            </span>
                                                            <div class="input-group mb-3" style="max-width: 120px;">
                                                                <div class="input-group-prepend">
                                                                    <button class="btn btn-outline-primary"
                                                                        type="button"
                                                                        onclick="updateCartItem('<%= cartItem._id %>', 'decrement')">&minus;</button>
                                                                </div>
                                                                <input type="text" class="form-control text-center"
                                                                    value="<%= cartItem.quantity %>"
                                                                    id="quantityElement_<%= cartItem._id %>"
                                                                    aria-label="Example text with button addon"
                                                                    aria-describedby="button-addon1" readonly>
                                                                <div class="input-group-append">
                                                                    <button class="btn btn-outline-primary"
                                                                        type="button"
                                                                        onclick="updateCartItem('<%= cartItem._id %>', 'increment')">&plus;</button>
                                                                </div>
                                                            </div>
                                                            <form action="/remove-from-cart/<%= cartItem._id %>"
                                                                method="post" id="<%= cartItem._id %>">
                                                                <button type="button" class="btn btn-sm btn-primary"
                                                                    onclick="removeCartItem('<%= cartItem._id %>')">
                                                                    Remove
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                    <% }) %>
                                            </div>
                                        </div>
                                </div>
                                </form>
                                <div class="row mt-5">
                                    <div class="col-md-6 mb-3">
                                        <p>
                                            <a href="/shop" class="btn btn-outline-primary btn-sm btn-block">
                                                Continue Shopping
                                            </a>
                                        </p>
                                    </div>
                                    <div class="col-md-6 pl-5">
                                        <% if (cartProducts.length) { %>
                                            <div class="row justify-content-end">
                                                <div class="col-md-7">
                                                    <div class="row">
                                                        <div class="col-md-12 text-right border-bottom mb-5">
                                                            <h3 class="text-black h4 text-uppercase">Cart Totals</h3>
                                                        </div>
                                                    </div>
                                                    <div class="row mb-5">
                                                        <div class="col-md-6">
                                                            <span>Total Price</span>
                                                        </div>
                                                        <div class="col-md-6 pl-0">
                                                            <span class="h5 text-black">
                                                                ₹<span id="grandTotalPrice" class="text-black">
                                                                    <%= grandTotal.toFixed(2) %>
                                                                </span>
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="row mb-5">
                                                        <% if (insufficientStockProduct) { %>
                                                            <p class="col-md-12 text-danger">
                                                                Insufficient stocks. Please check your cart item's quantities
                                                            </p>
                                                        <% } %>
                                                        <div class="col-md-12">
                                                            <a href="/checkout"
                                                                class="btn btn-primary btn-lg py-3 btn-block"
                                                                id="proceedBtn">
                                                                Proceed To Checkout
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <% } else { %>
                                                <div class="row mb-5">
                                                    <div class="col-md-6">
                                                        <p>
                                                            <a href="/shop"
                                                                class="btn btn-outline-primary btn-sm btn-block">
                                                                Go To Shop
                                                            </a>
                                                        </p>
                                                    </div>
                                                </div>
                                                <% } %>
                                    </div>
                                </div>
                    </div>
                    <% } %>

                </div>
        </div>

        <script>
            // remove from cart
            function removeCartItem(cartItemId) {
                $.ajax({
                    url: '/remove-from-cart/' + cartItemId,
                    type: 'POST',
                    success: function (response) {
                        // Handle success, e.g., update the cart UI
                        location.reload();
                    },
                    error: function (xhr, status, error) {
                        // Handle errors
                    }
                });
            }

            // update cart
            function updateCartItem(cartItemId, incOrDec) {
                const data = {
                    type: incOrDec
                };
                $.ajax({
                    url: '/update-cart/' + cartItemId,
                    type: 'POST',
                    data: JSON.stringify(data),
                    contentType: 'application/json',
                    success: function (response) {
                        $('#totalPrice_' + cartItemId).text(response.totalPrice.toFixed(2));
                        $('#grandTotalPrice').text(response.grandTotal.toFixed(2));
                        $('#quantityElement_' + cartItemId).val(response.quantity);
                        const stockErrorElement = document.getElementById(`stock_${cartItemId}`);
                        if (response.insufficientStock) {
                            stockErrorElement.style.display = 'block';
                            proceedBtn.classList.add('disabled-link');
                        } else {
                            stockErrorElement.style.display = 'none';
                            proceedBtn.classList.remove('disabled-link');
                        }
                    },
                    error: function (xhr, status, error) {
                        console.log(status);
                    }
                });
            }
        </script>

        <%- include('../partials/customer/footer') -%>