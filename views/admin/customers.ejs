<!DOCTYPE html>
<html lang="en">

<%- include('../partials/admin/head') -%>

<body>
  <div class="container-scroller">
    <%- include('../partials/admin/header') -%>
    <div class="main-panel">
      <div class="content-wrapper my-custom-wrapper">
        <div class="col-lg-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <div class="customer-title-section d-flex justify-content-between flex-wrap">
                <h4 class="card-title flex-grow-1 col-md-8">Customers</h4>
                <form class="form-inline flex-grow-1 col-md-4">
                  <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" id="search-input">
                </form>
              </div>
              <div class="table-responsive">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>
                        User
                      </th>
                      <th>
                        Username
                      </th>
                      <th>
                        Email
                      </th>
                      <th>
                        Phone
                      </th>
                      <th>
                        Verified
                      </th>
                      <th>
                        Actions
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (!customerDatas.length) { %>
                    <tr>
                      <td colspan="6">No customers found.</td>
                    </tr>
                    <% } else { %>
                    <% customerDatas.forEach((customer)=> { %>
                    <tr>
                      <td class="py-1">
                        <% if (customer.profile.includes('undefined') || customer.profile==='' ) { %>
                        <i class="bi bi-person-circle" style="font-size: 24px;"></i>
                        <% } else { %>
                        <img src="<%= customer.profile %>" alt="profile" onclick="openModal('<%= customer.profile %>')" />
                        <% } %>
                      </td>
                      <!-- for display and zoom image -->
                      <div id="imageModal" class="modal">
                        <button id="closeButton" class="close-button">
                          <i class="bi bi-x-lg"></i>
                        </button>
                        <div class="image-zoom mt-5">
                          <img src="" id="modalImage" alt="Image">
                        </div>
                      </div>
                      <td>
                        <%= customer.username %>
                      </td>
                      <td>
                        <%= customer.email %>
                      </td>
                      <td>
                        <%= customer.phone %>
                      </td>
                      <td>
                        <%= customer.verified %>
                      </td>
                      <td>
                        <form action="/admin/customers/action/<%= customer._id %>?_method=PATCH" method="post" id="action-form">
                          <% if(customer.blocked===true) { %>
                          <input type="hidden" name="state" value="">
                          <button type="submit" class="btn btn-warning btn-sm block-button">
                            Unblock
                          </button>
                          <% } else { %>
                          <input type="hidden" name="state" value="1">
                          <button type="submit" class="btn btn-danger btn-sm block-button">
                            Block
                          </button>
                          <% } %>
                        </form>
                      </td>
                    </tr>
                    <% }) %>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>

      <script>

        // JavaScript code for handling the AJAX request when input changes
        $(document).ready(function() {
          // Listen for changes in the search input
          $('#search-input').on('input', function() {
            // Get the search query from the input field
            const searchQuery = $(this).val();

            // Send an AJAX request to your server
            $.ajax({
              type: 'POST', // Use GET or POST as needed
              url: '/admin/customers?search=true', // Replace with your server endpoint
              data: {
                searchQuery
              }, // Send the search query to the server
              success: function(response) {
                // Handle the response from the server
                console.log(response);
                $('#search-results').html(response.customerDatas);
              },
              error: function(error) {
                console.error('Error:', error);
              }
            });
          });
        });

      </script>

      <%- include('../partials/admin/footer') -%>