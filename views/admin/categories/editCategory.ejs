<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Shoppers Admin</title>
  <!-- plugins:css -->
  <link rel="stylesheet" href="/admin/vendors/feather/feather.css">
  <link rel="stylesheet" href="/admin/vendors/ti-icons/css/themify-icons.css">
  <link rel="stylesheet" href="/admin/vendors/css/vendor.bundle.base.css">
  <!-- endinject -->
  <!-- Plugin css for this page -->
  <link rel="stylesheet" href="/admin/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
  <link rel="stylesheet" href="/admin/vendors/ti-icons/css/themify-icons.css">
  <link rel="stylesheet" type="text/css" href="/admin/js/select.dataTables.min.css">
  <!-- End plugin css for this page -->
  <!-- inject:css -->
  <link rel="stylesheet" href="/admin/css/vertical-layout-light/style.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <!-- endinject -->
  <link rel="shortcut icon" href="/admin/images/favicon.png" />
</head>

<body>
  <div class="container-scroller">
    <%- include('../../partials/admin/header') -%>
    <div class="main-panel">
      <div class="content-wrapper my-custom-wrapper">
        <div class="row">
          <div class="col-12 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">Edit <%= categoryData.name %> Category</h4>

                <form class="forms-sample" action="/admin/edit-category/<%= categoryData._id %>?_method=PATCH" method="post" enctype="multipart/form-data">
                  <div class="form-group">
                    <label for="exampleInputName1">Category Name</label>
                    <input type="text" class="form-control" name="name" id="exampleInputName1" placeholder="Name" value="<%= categoryData.name %>" required>
                    <p class="text-danger" id="error-message"></p>
                    <p class="text-danger mb-3">
                      <%= error %>
                    </p>
                  </div>
                  <div class="form-group">
                    <label>Upload New Image</label>
                    <div class="input-group col-xs-12">
                      <input type="file" accept="image/*" name="photo" class="form-control file-upload-info" placeholder="Upload Image" id="preview-input" required />
                    </div>
                  </div>

                  <div class="form-group" id="preview-group">
                    <div class="card">
                      <div class="card-header">
                        Preview Image
                      </div>
                      <div class="card-body">
                        <img src="<%= categoryData.image %>" alt="img" class="preview" id="preview-img" style="max-width: 440px; max-height: 300px; object-fit: cover;" />
                      </div>
                    </div>
                  </div>

                  <button type="submit" class="btn btn-primary mr-2">Edit</button>
                  <a href="#" class="btn btn-outline-primary btn-light" id="cancel-button">Cancel</a>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>

  <script>
    const previewArea = document.getElementById('preview-group');
    const previewInput = document.getElementById('preview-input');
    const previewImg = document.getElementById('preview-img');
    previewInput.onchange = e => {
      if (e.target.files && e.target.files.length) {
        const imgSrc = URL.createObjectURL(e.target.files[0]);
        previewImg.src = imgSrc;
        previewArea.style.display = 'block';
      }
    }
  </script>

  <%- include('../../partials/admin/footer') -%>