<!DOCTYPE html>
<html lang="en">

<%- include('../partials/admin/head') -%>

<body>
    <div class="container-scroller">
        <%- include('../partials/admin/header') -%>
            <div class="main-panel">
                <div class="content-wrapper my-custom-wrapper">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <h4>Customers</h4>
                                    <a href="/admin/new-product" class="btn btn-primary">New Product</a>
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Product
                                                </th>
                                                <th>
                                                    Name
                                                </th>
                                                <th>
                                                    category
                                                </th>
                                                <th>
                                                    Price
                                                </th>
                                                <th>
                                                    Stock
                                                </th>
                                                <th>
                                                    Actions
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (!productDatas.length) { %>
                                                <tr>
                                                    <td colspan="3">No products found.</td>
                                                </tr>
                                            <% } else { %>
                                                <% productDatas.forEach((product)=> { %>
                                            <tr>
                                                <td>
                                                    <% product.images.forEach(img => { %>
                                                        <div class="row">
                                                            <div class="col-4">
                                                                <img src="<%= img %>" alt="">
                                                            </div>
                                                        </div>
                                                    <% }) %>
                                                </td>
                                                <td>
                                                    <%= product.name %>
                                                </td>
                                                <td>
                                                    <%= product.category.name %>
                                                </td>
                                                <td>
                                                    <%= product.price %>
                                                </td>
                                                <td>
                                                    <%= product.stock %>
                                                </td>
                                                <td>
                                                    <a href="/admin/edit-product/<%= product._id %>" class="btn btn-info btn-sm">Edit</a>
                                                    <button type="submit"
                                                        class="btn btn-warning btn-sm">Activate</button>
                                                </td>
                                            </tr>
                                            <% }) %>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
                <%- include('../partials/admin/footer') -%>