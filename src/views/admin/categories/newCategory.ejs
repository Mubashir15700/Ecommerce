<!DOCTYPE html>
<html lang="en">

<%- include('../../partials/admin/head') -%>

<body>
  <div class="container-scroller">
    <%- include('../../partials/admin/header') -%>
    <div class="main-panel">
      <div class="content-wrapper my-custom-wrapper">
        <div class="row">
          <div class="col-12 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">Add new category</h4>

                <form class="forms-sample" action="/admin/categories/new" method="post" enctype="multipart/form-data">
                  <div class="form-group col-md-12">
                    <label for="exampleInputName1">Category Name</label>
                    <input type="text" class="form-control" name="name" id="exampleInputName1" placeholder="Name" required>
                    <p class="text-danger" id="error-message"></p>
                  </div>

                  <div class="d-flex flex-column flex-md-row justify-content-between">
                    <div class="form-group col-md-6 col-12">
                      <label for="exampleInputName1">Offer Percentage</label>
                      <input type="number" class="form-control" name="offerPercentage" id="exampleInputName1" placeholder="Offer Percentage">
                    </div>

                    <div class="form-group col-md-6 col-12">
                      <label for="exampleInputName1">Offer Valid Upto</label>
                      <input type="date" class="form-control" name="offerValidUpto" id="exampleInputName1" placeholder="Offer Valid Upto">
                    </div>
                  </div>

                  <div class="form-group col-md-12">
                    <label>Image upload</label>
                    <div class="input-group col-xs-12">
                      <input type="file" accept="image/*" name="photo" class="form-control file-upload-info" placeholder="Upload Image" id="preview-input" required />
                    </div>
                  </div>
                  <div class="form-group col-md-12" id="preview-group" style="display: none;">
                    <div class="card">
                      <div class="card-header">
                        Preview Image
                      </div>
                      <div class="card-body">
                        <img src="" alt="img" class="preview" id="preview-img" width="200px" style="object-fit: cover;" />
                      </div>
                    </div>
                  </div>
                  <p class="text-danger mb-3"><%= error %></p>
                  <button type="submit" class="btn btn-primary mr-2">Add</button>
                  <a href="#" class="btn btn-outline-primary btn-light" id="cancel-button">Cancel</a>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
  </div>

  <script>
    const previewArea = document.getElementById('preview-group');
    const previewInput = document.getElementById('preview-input');
    const previewImg = document.getElementById('preview-img');

    previewInput.onchange = e => {
      if (e.target.files && e.target.files.length) {
        const imgSrc = URL.createObjectURL(e.target.files[0]);
        previewImg.src = imgSrc;
        previewArea.style.display = 'block';
      }
    }
  </script>

  <%- include('../../partials/admin/footer') -%>