<!DOCTYPE html>
<html lang="en">

<%- include('../../partials/admin/head') -%>

<body>
  <div class="container-scroller">
    <%- include('../../partials/admin/header') -%>
      <div class="main-panel">
        <div class="content-wrapper my-custom-wrapper">
          <div class="row">
            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Add New Coupon</h4>

                  <form class="forms-sample" action="/admin/new-coupon" method="post">
                    <p class="text-danger mb-3">
                      <%= error %>
                    </p>
                    <div>
                      <div class="form-group col-md-12">
                        <label for="exampleInputName1">Description</label>
                        <input type="text" class="form-control" name="description" id="exampleInputName1" placeholder="Description" required>
                      </div>
                    </div>

                    <div class="d-flex justify-content-between">
                      <div class="form-group col-md-6">
                        <label for="cat">Discount Type</label>
                        <select name="discountType" id="discountType" class="form-control" required>
                          <option value="fixedAmount">
                            Fixed amount
                          </option>
                          <option value="percentage">
                            Percentage of amount
                          </option>
                        </select>
                      </div>

                      <div class="form-group col-md-6">
                        <label for="exampleInputName1" id="discountAmountLabel">Discount Amount</label>
                        <input type="number" class="form-control" name="discountAmount" id="exampleInputName1" placeholder="Discount Amount / Discount Percentage" required>
                      </div>
                    </div>

                    <div class="d-flex justify-content-between">
                      <div class="col-md-6 form-group">
                        <label for="exampleInputName1">Minumum Purchase Amount</label>
                        <input type="number" class="form-control" name="minimumPurchaseAmount" id="exampleInputName1" placeholder="Minumum Purchase Amount" required>
                      </div>

                      <div class="col-md-6 form-group">
                        <label for="exampleInputName1">Usage Limit</label>
                        <input type="number" class="form-control" name="usageLimit" id="exampleInputName1" placeholder="Limit" required>
                      </div>
                    </div>

                    <div>
                      <button type="submit" class="btn btn-primary mr-2">Create</button>
                      <a href="#" class="btn btn-outline-primary btn-light" id="cancel-button">Cancel</a>
                    </div>
                </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
  </div>
  </div>

  <script>
    // Get references to the discount type and discount amount elements
    const discountTypeSelect = document.getElementById('discountType');
    const discountAmountLabel = document.getElementById('discountAmountLabel');
    const discountAmountInput = document.querySelector('input[name="discountAmount"]');

    // Add an event listener to the discount type dropdown
    discountTypeSelect.addEventListener('change', function() {
      // Check if the selected value is "percentage"
      if (this.value === "percentage") {
        // Set the placeholder and validation for percentage input
        discountAmountInput.placeholder = "Discount Percentage";
        discountAmountLabel.textContent = "Discount Percentage";
        discountAmountInput.setAttribute("min", "0");
        discountAmountInput.setAttribute("max", "100");
        discountAmountInput.setAttribute("step", "0.01"); // Allows decimal percentages
      } else {
        // Set the placeholder and validation for fixed amount input
        discountAmountLabel.textContent = "Discount Amount";
        discountAmountInput.placeholder = "Discount Amount";
        discountAmountInput.removeAttribute("min");
        discountAmountInput.removeAttribute("max");
        discountAmountInput.removeAttribute("step");
      }
    });
  </script>

  <%- include('../../partials/admin/footer') -%>